<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSettingsActivity">
    
    <TextView
        android:id="@+id/playersNumberTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecione o nÃºmero de oponetnes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <Spinner
        android:id="@+id/playersNumberSp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/num_players"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playersNumberTv" />
    
    <Button
        android:id="@+id/SaveBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playersNumberSp"/>

</androidx.constraintlayout.widget.ConstraintLayout>